# VoiceFlow Environment Configuration
# Copy this file to .env and configure as needed

# App Environment
APP_ENV=development
DEBUG_MODE=false

# API Configuration
OPENAI_API_URL=https://api.openai.com/v1
API_TIMEOUT=30000
UPLOAD_TIMEOUT=60000

# Default Models
DEFAULT_STT_MODEL=whisper-1
DEFAULT_TTS_MODEL=tts-1
DEFAULT_TTS_VOICE=alloy

# Privacy Settings - DISABLED BY DEFAULT
# These features send data to external services
# Only enable if you understand the privacy implications
ENABLE_ANALYTICS=false
ENABLE_CRASH_REPORTING=false

# Sentry Configuration (only used if ENABLE_CRASH_REPORTING=true)
# SENTRY_DSN=

# Network Security
# Set to true to block all external resources except configured APIs
STRICT_NETWORK_POLICY=true